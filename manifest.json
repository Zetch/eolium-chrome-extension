{
  "manifest_version": 2,
  "name": "EOLium",
  "description": "Enable new features on ElOtroLado.net forums like live filtering, hide read threads or compact mode",
  "version": "0.1",
  "author": "Nauzet Hernandez", // (nauzethc@gmail.com)

  "icons": {
    "48":  "images/icon48.png",
    "128": "images/icon128.png"
  },

  "page_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
      },
    "default_title": "EOLium"
  },

  "permissions": [
    "declarativeContent",
    "tabs",
    "http://www.elotrolado.net/"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["http://www.elotrolado.net/*"],
      "js": ["common.js"]
    },
    {
      "matches": ["http://www.elotrolado.net/*"],
      "js": ["navigation.js", "userzone.js"],
      "css": ["navigation.css", "userzone.css"]
    },
    {
      "matches": ["http://www.elotrolado.net/foro_*"],
      "js": ["forums.js"],
      "css": ["forums.css"]
    },
    {
      "matches": ["http://www.elotrolado.net/hilo_*"],
      "js": ["threads.js"],
      "css": ["threads.css"]
    }
  ]
}