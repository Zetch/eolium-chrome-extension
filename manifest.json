{
  "manifest_version": 2,
  "name": "EOLium",
  "description": "Enable new features on ElOtroLado.net forums like live filtering, hide read threads or compact mode",
  "version": "1.0.0",
  "author": "Nauzet Hernandez",

  "icons": {
    "48":  "images/icon48.png",
    "128": "images/icon128.png"
  },

  "options_page": "options.html",

  "page_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
      },
    "default_title": "EOLium"
  },

  "permissions": [
    "declarativeContent",
    "tabs",
    "http://www.elotrolado.net/",
    "storage"
  ],

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["http://www.elotrolado.net/*"],
      "js": [
        "js/global.js"
      ],
      "css": [
        "styles/global.css"
      ]
    }, {
      "run_at": "document_end",
      "matches": ["http://www.elotrolado.net/foro_*"],
      "js": [
        "js/forums.js"
      ],
      "css": [
        "styles/forums.css"
      ]
    }, {
      "run_at": "document_end",
      "matches": ["http://www.elotrolado.net/hilo_*"],
      "js": [
        "js/threads.js"
      ],
      "css": [
        "styles/threads.css"
      ]
    }
  ],

  "web_accessible_resources": [
    "images/eollogo.svg"
  ]
}
